{
    "plugins": [
        "Baidutongji",
        "ZhutibangCopyright"
    ],
    "config": {
        "Baidutongji": {
            "description": "百度统计插件",
            "regex": "<!-- BAIDU_TONGJI -->",
            "files": [
                "index.php"
            ],
            "input": [
                {
                    "name": "baidu_tongji_code",
                    "description": "百度统计代码",
                    "type": "text"
                }
            ]
        },
        "ZhutibangCopyright": {
            "description": "主题邦版权信息",
            "regex": "<!-- ZHUTIBANG_COPYRIGHT -->",
            "files": [
                "index.php"
            ],
            "input": [
                {
                    "name": "copyright_show",
                    "description": "是否显示主题邦版权信息",
                    "type": "radio"
                }
            ]
        }
    }
}
